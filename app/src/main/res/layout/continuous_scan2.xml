<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.journeyapps.barcodescanner.DecoratedBarcodeView
                    android:id="@+id/barcode_scanner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </com.journeyapps.barcodescanner.DecoratedBarcodeView>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"

            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ll_Save_QR_Image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:orientation="vertical">
                <!-- <View
                     android:layout_width="0dp"
                     android:layout_height="match_parent"
                     android:layout_centerHorizontal="true"
                     android:id="@+id/centerHorizont" />-->

                <ImageView
                    android:id="@+id/barcodePreview"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />

                <Button
                    android:id="@+id/btn_save"
                    style="@style/smallTextViewStyle_white"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/btn_bg"
                    android:text="Save"
                    android:visibility="gone" />
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgvw_save"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/ic_baseline_check_24"
                        />
                    <ImageView
                        android:id="@+id/imgvw_cancel"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_baseline_close_24"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_pause"
                    style="@style/smallTextViewStyle_white"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_bg"

                    android:text="Pause" />
                <Button
                    android:id="@+id/btn_resume"
                    style="@style/smallTextViewStyle_white"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                   android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_bg"

                    android:text="Resume" />

                <Button
                    android:id="@+id/btn_finish"
                    style="@style/smallTextViewStyle_white"
                    android:layout_width="100dp"
                    android:layout_height="40dp"

                    android:background="@drawable/btn_bg"

                    android:text="Finish" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/QR_count"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                style="@style/smallTextViewStyle_white"
                android:layout_height="wrap_content"
               android:layout_gravity="left"
                android:textColor="@color/white"
                android:text="QR scanned: 0"
                />

            <TextView

                android:id="@+id/Beacon_count"
                android:layout_weight="1"
                style="@style/smallTextViewStyle_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beacons found: 0"
                android:layout_gravity="right"
               android:gravity="right"
                />



        </LinearLayout>
    </FrameLayout>
</LinearLayout>