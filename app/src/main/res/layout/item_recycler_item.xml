            <TextView android:textColor="@android:color/black" android:id="@+id/tv_text1" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="text1" android:singleLine="true"/>
            <TextView android:textSize="10sp" android:textColor="@android:color/black" android:id="@+id/tv_text2" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="text2" android:maxLines="2"/>
        </LinearLayout>
        <ImageView android:layout_gravity="center" android:layout_width="16dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:src="@drawable/bt_arrow"/>
    </LinearLayout>
    <LinearLayout android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="1px"/>
</LinearLayout>
